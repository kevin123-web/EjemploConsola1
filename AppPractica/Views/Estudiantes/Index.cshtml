@model IEnumerable<AppPractica.Entities.Estudiante>
@using AppPractica.Entities;
@{
    ViewData["Title"] = "Lista De Estudiantes";
}


<div class="text-center">
    <h1 class="display-4">Lista de estudiantes</h1>
    @if (!Model.Any())
    {
        <p>No hay estudiantes registrados</p>
    }

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Cedula</th>
                <th>Nivel</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Estudiante actual in Model)
            {
                <tr>
                    <td>
                        @(actual.Nombre)
                    </td>
                    <td>
                        @(actual.Cedula)
                    </td>
                    <td>
                        @(actual.Nivel)
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <a href="estudiantes/create" class="btn btn-primary">Registrar un nuevo Estudiante </a>
</div>
